{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "removeComments": false,
    "importHelpers": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "types": ["node"]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}